{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@harbor/core": ["../../packages/harbor-core/src"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"],
  "references": [
    {
      "path": "../../packages/harbor-core"
    }
  ]
}

