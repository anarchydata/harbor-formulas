{
  "name": "harbor-formulas",
  "displayName": "Harbor Formulas",
  "description": "Spreadsheet application built on VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "harborFormulasExplorer",
          "name": "Harbor Formulas",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "harborFormulas.newSpreadsheet",
        "title": "New Spreadsheet"
      },
      {
        "command": "harborFormulas.openSpreadsheet",
        "title": "Open Spreadsheet"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild media/main.js --bundle --outfile=media/bundle.js --format=iife --global-name=HarborFormulas",
    "bundle:watch": "esbuild media/main.js --bundle --outfile=media/bundle.js --format=iife --global-name=HarborFormulas --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@harbor/core": "*",
    "handsontable": "^16.1.1",
    "hyperformula": "^3.1.0"
  }
}

