{
  "name": "harbor-formulas",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@harbor/core",
    "build:vscode": "npm run compile --workspace=apps/harbor-vscode",
    "watch:core": "npm run watch --workspace=@harbor/core",
    "watch:vscode": "npm run watch --workspace=apps/harbor-vscode"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
